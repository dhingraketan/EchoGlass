# Copy this file to .env.local and fill in your values
# cp env.template .env.local

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Household ID (single user setup)
# Generate a UUID with: uuidgen or node -e "console.log(require('crypto').randomUUID())"
NEXT_PUBLIC_HOUSEHOLD_ID=your_household_id_uuid

# Alexa Integration
# Generate with: openssl rand -hex 32
ALEXA_SHARED_SECRET=your_secure_random_secret_here

# Optional: Weather API
NEXT_PUBLIC_WEATHER_API_KEY=your_openweather_api_key_optional

# Optional: Stocks API (Massive.com)
STOCKS_API_KEY=your_massive_api_key_optional

# Gemini API for Photo Tryout
GEMINI_API_KEY=your_gemini_api_key_optional
